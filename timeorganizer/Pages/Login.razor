@page "/login"
@using timeorganizer.Services
@using timeorganizer.Helpers
@inject LoginService login
@inject AuthServiceSetUser auth
@if (!auth.CurrentUser.Identity.IsAuthenticated)
{
	<div class="container">
		@*<img src="vizualization2.png">*@
		<h2> LOGIN </h2>
		<input @bind="@login.LoginValue" placeholder="Podaj login" />
		<input @bind="@login.PassValue" type="password" placeholder="Podaj hasło"/> 
		<button class="btn btn-primary" @onclick="@(() => login.LoginCommand.Execute(true))"> Login </button> <br/>
		<a href="/Register" class="button">Rejestracja</a>

	</div>

}
else
{
	<div>jestes juz zalogowany!!</div>
}

