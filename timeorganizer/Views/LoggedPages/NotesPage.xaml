<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="timeorganizer.Views.LoggedPages.NotesPage"
             Title="NotesPage">
    <VerticalStackLayout>
        <Label 
            Text="Wprowadż swoją pierwszą notatkę"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry Text="{Binding YourTextProperty}" Placeholder="Pole na wpisanie notatki" IsPassword="False" Keyboard="Default" />
        <Button Text="Dodaj notatkę do listy" <!--Clicked="OnCreateTaskClicked" <!--Należy w cliked podpiac komende z pageviewmodel jak bedzie zrobione obecnie z tym nie bedzie sie uruchamiac program - JB -->/>
    </VerticalStackLayout>
</ContentPage>