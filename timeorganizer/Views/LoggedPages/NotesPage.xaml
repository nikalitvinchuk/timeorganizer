<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="timeorganizer.Views.LoggedPages.NotesPage"
             BackgroundColor="White">

    <StackLayout Padding="15">

        <!-- Nagłówek -->
        <Label Text="Notes" FontSize="Title" HorizontalOptions="Center" Margin="0,0,0,20" />

        <!-- Lista notatek -->
            <StackLayout Padding="10">
                            <Entry Text="{Binding Path = AddNotes.Title}" FontSize="18" />
                            <Entry Text="{Binding Path = AddNotes.Content1}" FontSize="14" />
            </StackLayout>

                        <!-- Przyciski -->
        <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
            <Button Text="Add Note" Command="{Binding Path = AddNotes.AddNoteCommand}"  HorizontalOptions="FillAndExpand" />
            <Button Text="Edit Note"  HorizontalOptions="FillAndExpand" />
        </StackLayout>

    </StackLayout>

</ContentPage>
