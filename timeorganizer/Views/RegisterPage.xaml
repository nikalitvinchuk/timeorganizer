<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="timeorganizer.Views.RegisterPage"
             Title="Rejestracja">
    <VerticalStackLayout>
        <Entry x:Name="Email"  Placeholder="Podaj Email" Text="{Binding EmailValue}" TextChanged="OnTextChangedEmail"/>
        <Entry x:Name="Login"  Placeholder="Podaj login" Text="{Binding LoginValue}" TextChanged="OnTextChangedLogin"/>

        <Entry x:Name="Pass" Placeholder="Podaj hasło" IsPassword="True" Text="{Binding PassValue}" TextChanged="OnTextChangedPass" />
        <Entry x:Name="PassVerification" Placeholder="Powtórz hasło" IsPassword="True" Text="{Binding PassVerificationValue}" TextChanged="OnTextChangedPassVerification" />
        <Button
            x:Name="RegisterButton"
            Text="Zarejestruj"
            SemanticProperties.Hint="Rejestracja nowego konta w systemie"
            Clicked="TryRegister"
            HorizontalOptions="Center" />
        <Button
            x:Name="GotoLoginButton"
            Text="Przejdz do logowania"
            SemanticProperties.Hint="Zaloguj się do konta"
            Clicked="GotoLoginClicked"
            HorizontalOptions="Center" />

    </VerticalStackLayout>
</ContentPage>